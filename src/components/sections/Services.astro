---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Leitarvéla",
    titleBottom: "Bestun",
    img: c1,
    alt: "SEO",
  },
  {
    index: 2,
    titleTop: "Smellgreiðslur",
    titleBottom: "Auglýsingar",
    img: c2,
    alt: "SEO",
  },
  {
    index: 3,
    titleTop: "Samfélagsmiðlar",
    titleBottom: "Markaðssetning",
    img: c3,
    alt: "SEO",
  },
  {
    index: 1,
    titleTop: "Tölvupóstur",
    titleBottom: "Markaðssetning",
    img: c4,
    alt: "SEO",
  },
  {
    index: 2,
    titleTop: "Efnis",
    titleBottom: "Sköpun",
    img: c5,
    alt: "SEO",
  },
  {
    index: 3,
    titleTop: "Greiningar og",
    titleBottom: "Eftirfylgni",
    img: c6,
    alt: "SEO",
  },
];

const description =
  "Þú færð alla þá þjónustu sem þú þarft til þess að láta taka eftir þér á internetinu";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Þjónusta" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
          />
        ))
      }
    </div>
  </div>
</Section>
